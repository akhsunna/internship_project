.modal-dialog
  .modal-content
    .modal-header
      = link_to '', class: 'close', data: {dismiss: 'modals'}  do
        %span{'aria-hidden' => 'true'} Ã—
        %span.sr-only Close
      %h4.modal-title Genres
    .modal-body
      .well{ style: 'max-height: 300px;overflow: auto;' }
        %ul.list-group.checked-list-box
          - Genre.all.each do |genre|
            - if @genres.include?(genre)
              = link_to book_remove_genre_path(genre_id: genre.id,book_id: @book.id), method: :put, remote: true, style: 'text-decoration: none;' do
                %li.list-group-item{'data-checked' => 'true'}= genre.name
            -else
              = link_to book_add_genre_path(genre_id: genre.id,book_id: @book.id), method: :put, remote: true, style: 'text-decoration: none;' do
                %li.list-group-item= genre.name
    .modal-footer
