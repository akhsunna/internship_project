.container.signin
  .col-md-4.col-md-offset-4

    = form_for resource, as: resource_name, url: session_path(resource_name) do |f|

      %h3 Please sign in
      = f.email_field :email, autofocus: true, placehplder: :email, class: 'form-control'
      %br
      = f.password_field :password, autocomplete: 'off', placehplder: :password, class: 'form-control'

      %p

      = f.submit 'Sign in', class: 'btn btn-default btn-primary'

    = link_to 'Sign in with Facebook', user_omniauth_authorize_path(:facebook)
    %br
    = link_to 'Sign up', new_registration_path(resource_name)
    %br
    = link_to 'Forgot your password?', new_password_path(resource_name)
